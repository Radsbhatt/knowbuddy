.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", kyu_entries_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      User
    .inner
      = form_for @user, :html => { :class => :form, :id => "formID" } do |f|
        .group
          = f.label :name, 'Name', :class => :label
          = f.text_field :name, :class => 'text_field validate[required] text-input'
        .group.navform.wat-cf
          %button.button{:type => "submit"}
            = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
            = t("web-app-theme.save", :default => "Save")
          %span.text_button_padding= t("web-app-theme.or", :default => "or")
          = link_to t("web-app-theme.cancel", :default => "Cancel"), kyu_entries_path, :class => "text_button_padding link_button"
