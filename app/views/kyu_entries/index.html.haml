.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", kyu_entries_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_kyu_entry_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      KYU's
    .inner
      %table.table
        %tr         
          %th
            = t("activerecord.attributes.kyu_entry.subject", :default => t("activerecord.labels.subject", :default => "Subject"))
          %th= t("web-app-theme.created_at", :default => "Date")
          %th= t("web-app-theme.created_at", :default => "Contributor")
        - @kyu_entries.each do |kyu_entry|
          %tr{:class => cycle("odd", "even")}
            %td
              = link_to kyu_entry.subject, kyu_entry_path(kyu_entry)
            %td
              = kyu_entry.created_at.strftime('%d-%b-%Y')
            %td
              = kyu_entry.user.email
            -# %td.last
            -#  = link_to "#{t("web-app-theme.show", :default => "View")}", kyu_entry_path(kyu_entry)
            -#  |
            -#  \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_kyu_entry_path(kyu_entry)} 
            -#  |
            -#  \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", kyu_entry_path(kyu_entry), 	-#:method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = paginate @kyu_entries
- content_for :sidebar, render(:partial => 'sidebar')
