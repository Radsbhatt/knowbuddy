#kyu-edit-back-link
  - if current_user == @kyu_entry.user
    = link_to 'Edit', edit_kyu_entry_path(@kyu_entry)
    \|
    = link_to 'Delete', kyu_entry_path(@kyu_entry), confirm: 'Are you sure you want to delete this KYU?', method: :delete
#kyu-post
  #kyu-header
    .contributor_pic
      = image_tag avatar_url(@user.find(@kyu_entry.user_id), 70)
    .postDetails
      -# = @kyu_entry.user.email
      %b On:
      = @kyu_entry.publish_at.strftime('%d-%b-%Y')
  #kyu-details
    #kyu-subject
      = @kyu_entry.subject
    #kyu-content
      .kyuContent
        = raw RedCloth.new(@kyu_entry.content).to_html
      #right
        .rightCorner

  %br

#tag_head
  - unless @kyu_entry.tag_list.blank?
    %h3 Tags
    -# Added on 21st April 2012 by yatish to display tags
    -# Start
    #kyu-content
      - if current_user == @kyu_entry.user
        .kyuContent{kyu_id: @kyu_entry.id}
          - @kyu_entry.tag_list.each do |tag|
            %span#kyu-tag
              = tag
      - else
        .kyuContent
          - @kyu_entry.tag_list.each do |tag|
            %span#kyu-tag-els
              = tag
    -# End
%br
#comment_head
  %h3 Post Your Comment
  = render partial: "comments/form"
  %br
  %br
= render partial: "comments/comment", locals: { comments: @kyu_entry.comments.order("comments.created_at DESC"), kyu_entry: @kyu_entry}

