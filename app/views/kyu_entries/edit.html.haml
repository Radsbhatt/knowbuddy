.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", kyu_entries_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_kyu_entry_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_kyu_entry_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      KyuEntry
    .inner
      = form_for @kyu_entry, :url => kyu_entry_path(@kyu_entry), :html => { :class => :form, :id => "formID" } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
